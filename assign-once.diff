+++ b/xpcom/glue/AssignOnce.h
@@ -0,0 +1,59 @@
+#ifndef AssignOnce_h__
+#define AssignOnce_h__
+
+namespace mozilla {
+
+template <typename T>
+class AssignOnce {
+
+  // AssignOnce itself should never be instantiated:
+  AssignOnce();
+ ~AssignOnce();
+
+public:
+
+#ifndef DEBUG
+
+  typedef T type;
+
+#else
+
+  class type {
+
+    PRBool mAssigned;
+    T mValue;
+
+  public:
+
+    type()
+      : mAssigned(PR_FALSE)
+      , mValue()
+    {}
+
+    type(const T& t)
+      : mAssigned(PR_FALSE)
+      , mValue(t)
+    {}
+
+    operator const T&() const
+    {
+      return mValue;
+    }
+
+    type& operator=(const T& t)
+    {
+      NS_ASSERTION(!mAssigned, "Assigned too many times!");
+      mValue = t;
+      mAssigned = PR_TRUE;
+      return *this;
+    }
+
+  }; // class type
+
+#endif
+
+}; // class AssignOnce
+
+} // namespace mozilla
+
+#endif
