+    popupEvents = makePrefAccessor("dom.popup_allowed_events"),
+    popupPrivilege = function(permission) {
+      var old = pm.testPermission(ownUri, "popup");
+      if (arguments.length) {
+        pm.remove(ownUri.host, "popup");
+        pm.add(ownUri, "popup", permission);
+        is(popupPrivilege(), permission, "Couldn't set permission?");
+      }
+      return old;
+    };
