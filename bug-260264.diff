+function testProbablyIntentional(event) {
+  hold(popupMax, 2, function() {
+    send(a, event, checkOpened);
+    send(a, event, checkOpened);
+    send(a, event, checkBlocked);
+    window.open.close(1);
+    send(a, event, checkOpened);
+    send(a, event, checkBlocked);
+    send(a, event, checkBlocked);
+    window.open.close();
