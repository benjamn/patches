+/**
+ * Intentional popups are not limited by dom.popup_maximum.
+ */
+function testIntentional(event) {
+  hold(popupMax, 3, function() {
+    send(a, event, checkOpened);
+    send(a, event, checkOpened);
+    send(a, event, checkOpened);
+    send(a, event, checkOpened);
+  });
